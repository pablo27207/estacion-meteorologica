# ============================================
# GIPIS Weather Station Server - DESARROLLO
# Imagen simple con hot-reload (nodemon)
# ============================================

FROM node:20-alpine

WORKDIR /app

# Instalar dependencias de compilación para better-sqlite3
RUN apk add --no-cache python3 make g++

# Copiar package.json e instalar TODAS las dependencias (incluyendo devDependencies)
COPY package.json ./
RUN npm install

# Copiar configuración de Tailwind y archivos públicos para build
COPY tailwind.config.js ./
COPY public ./public

# Compilar Tailwind CSS
RUN npm run build:css

# Crear directorios necesarios
RUN mkdir -p /app/data

# Variables de entorno para desarrollo
ENV NODE_ENV=development
ENV PORT=3000

EXPOSE 3000

# Usar nodemon para hot-reload
CMD ["npm", "run", "dev"]
